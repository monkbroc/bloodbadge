source 'https://rubygems.org'
ruby '2.0.0'

gem 'rails', '~> 4.1.0'

# Webserver
gem 'thin', :group => :production

# PostgreSQL database used for development, test and production
gem 'pg'

# Use SCSS for stylesheets
gem 'sass-rails', '~> 4.0.3'
# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'
# Use CoffeeScript for .js.coffee assets and views
gem 'coffee-rails', '~> 4.0.0'

# Use jquery as the JavaScript library
gem 'jquery-rails'

# Use debugger
gem 'byebug', group: [:development, :test]

# CSS Framework
gem 'bootstrap-sass', '~> 3.0'

# ERB Alternative
gem 'haml-rails'

# Secure user authentication
gem 'devise'

group :development do
   # Display more stack trace info,
   # include instance variable inspection
   gem "better_errors"
   gem "binding_of_caller"

   # Suppress the flood of Started GET "/assets/application.js" log messages
   gem 'quiet_assets'
end

# Heroku gem to take advantage of Heroku stack features
gem 'rails_12factor', group: :production

# HTTP requests made easy
gem 'httparty'

